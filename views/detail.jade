extend layout
 
block content
    .container
        .row
            .col-md-8
                embed(src="#{movie.flash}",allowFullScrreen="true",
                     quality="high",width="750",height="600",align="middle",type="application/x-shockwave-flash")
                .panel.panel-default
                    .panel-heading
                      h3 评论区
                    .panel-body
                      ul.media-list
                        each comment in comments
                            li.media
                              .pull-left
                                img.media-object(src="https://avatars.githubusercontent.com/u/4067115?v=3&s=120" width="30px")
                              .media-body
                                h4.media-heading #{comment.from.name}
                                p #{comment.content}
                    form(method="post" action="/user/comment")
                      input(type="hidden" name="comment[movie]" value="#{movie._id}") 
                      .form-group
                        textarea.form-control(name="comment[content]" row="3")
                      button.btn.btn-primary(type="submit")提交     
            .col-md-4
                dl.dl-horizontal
                    dt 电影名字
                    dd=movie.title
                    dt 导演
                    dd=movie.doctor
                    dt 国家
                    dd=movie.country
                    dt 语言
                    dd=movie.language
                    dt 上映年份
                    dd=movie.year
                    dt 简介
                    dd=movie.summary