.navbar.navbar-default.navbar-fixed-top
	.container
		.navbar-header
			a.navbar-brand(href="/")
				img(src="/images/link.jpg" width="100px" height="50px")
		div
			ul.nav.navbar-nav
				li.active
					a(href="/") 电影频道
				li
					a(href="/movie/entry") 电影录入
				li
					a(href="/movie/list") 电影列表
		if user
			p.navbar-text.navbar-right
				span Hello, #{user.name}
				span &nbsp; | &nbsp;
				a.navbar-link(href="/user/list")进入后台
				span &nbsp; | &nbsp;	
				a.navbar-link(href="/logout")退出	
		else		
			p.navbar-text.navbar-right
				a.navbar-link(href="/signup")注册
				span &nbsp; | &nbsp;	
				a.navbar-link(href="/signin")登录	
#signUpModal.modal.fade
	.modal-dialog
		.modal-content
			form(method="POST", action="/user/signup")
				.modal-header
					h3.modal-title 欢迎注册
				.modal-body
					.form-group
						label 用户名
						input.form-control.regname(name="user[name]" type="text" required)
					.form-group
						label 密码
						input.form-control(name="user[password]" type="password" required)
				.modal-footer
					button.btn.btn-default(type="button" data-dismiss="modal")关闭
					button.btn.btn-success(type="submit")提交
#signInModal.modal.fade
	.modal-dialog
		.modal-content
			form(method="post",action="/signin")
				.modal-header
					h3.modal-title 欢迎登录
				.modal-body
					.form-group
						label 用户名
						input.form-control(name="user[name]" type="text" required) 
					.form-group
						label 密码
						input.form-control(name="user[password]" type="password" required)
				.modal-footer
					button.btn.btn-default(type="button" data-dismiss="modal")关闭
					button.btn.btn-success(type="submit")提交
